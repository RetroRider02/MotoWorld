<!DOCTYPE html>
<html lang="hu" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MotoWorld</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MotoWorld3.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script type="importmap"></script>
</head>
<body>
    <header>
        <nav class="fixed-top navbar bg-light-subtle p-3 pt-2">
            <div class="d-flex justify-content-between align-items-center w-100">
                <a class="navbar-brand text-warning fw-bold" asp-area="" asp-controller="Home" asp-action="Index">MotoWorld</a>                
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item d-none d-md-block">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Kezdőlap</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1"></ul>
                <partial name="_LoginPartial" />                
            </div>
        </nav>
    </header>

    <div class="container mt-5 pb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MotoWorld
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
