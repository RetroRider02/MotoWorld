@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h5 class="p-3 bg-secondary text-light fw-bold">@ViewData["Title"]</h5>
<div class="alert alert-warning" role="alert">
    <p>
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="row">
            <div class="col-8">
                @if (Model.RequirePassword)
                {
                    <div class="mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }
            </div>
            <div class="col">
                <button class="w-100 btn btn-sm btn-danger" type="submit">Delete data</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
