@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="row">
    <div class="col-sm-8 col-md-7 col-lg-6 col-xl-5 col-xxl-4 mt-5 align-content-center m-auto">
        <form method="post">
            <h5 class="p-3 bg-secondary text-light fw-bold">@ViewData["Title"]</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
